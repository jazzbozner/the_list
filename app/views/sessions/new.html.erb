<h1>Login</h1>


<%= form_tag login_path do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag "Log In" %>
<% end %>
<%= button_to "Create Profile", new_user_path, method: :get %>

<% if flash[:notice] %>
  <p> <%= flash[:notice] %></p>
  <% end %>